<section class="cb-card">
	<div class="ui page grid">
		<div class="nine wide column">
			<div class="row">
				<h1>{@l10n key="CARD_TITLE"/}</h1>
			</div>
			<div class="row">
				<h2>{@l10n key="CARD_DESC"/}</h2>
			</div>
			<div class="row">
				<p>
					{@l10n key="CARD_TO_INSTALL"/}<br/>
					<code>
						# npm install -g catberry-cli
					</code>
				</p>
				<p>
					{@l10n key="CARD_TO_CREATE_EMPTY"/}<br/>
